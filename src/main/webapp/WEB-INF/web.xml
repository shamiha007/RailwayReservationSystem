<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- =========================
         WELCOME PAGE
    ========================== -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- =========================
         LOGIN & REGISTER
    ========================== -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.railway.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.railway.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- =========================
         LOGOUT
    ========================== -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.railway.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- =========================
         USER SIDE
    ========================== -->
    <servlet>
        <servlet-name>SearchTrainServlet</servlet-name>
        <servlet-class>com.railway.servlet.SearchTrainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchTrainServlet</servlet-name>
        <url-pattern>/searchTrains</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewScheduleServlet</servlet-name>
        <servlet-class>com.railway.servlet.ViewScheduleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewScheduleServlet</servlet-name>
        <url-pattern>/viewSchedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookTicketServlet</servlet-name>
        <servlet-class>com.railway.servlet.BookTicketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookTicketServlet</servlet-name>
        <url-pattern>/bookTicket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyBookingsServlet</servlet-name>
        <servlet-class>com.railway.servlet.MyBookingsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyBookingsServlet</servlet-name>
        <url-pattern>/myBookings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CancelBookingServlet</servlet-name>
        <servlet-class>com.railway.servlet.CancelBookingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CancelBookingServlet</servlet-name>
        <url-pattern>/cancelBooking</url-pattern>
    </servlet-mapping>

    <!-- =========================
         ADMIN SIDE
    ========================== -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.railway.servlet.AdminLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTrainServlet</servlet-name>
        <servlet-class>com.railway.servlet.AddTrainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddTrainServlet</servlet-name>
        <url-pattern>/addTrain</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddScheduleServlet</servlet-name>
        <servlet-class>com.railway.servlet.AddScheduleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddScheduleServlet</servlet-name>
        <url-pattern>/addSchedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminViewTrainsServlet</servlet-name>
        <servlet-class>com.railway.servlet.AdminViewTrainsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminViewTrainsServlet</servlet-name>
        <url-pattern>/viewTrains</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewUsersServlet</servlet-name>
        <servlet-class>com.railway.servlet.ViewUsersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewUsersServlet</servlet-name>
        <url-pattern>/viewUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminViewBookingsServlet</servlet-name>
        <servlet-class>com.railway.servlet.AdminViewBookingsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminViewBookingsServlet</servlet-name>
        <url-pattern>/viewAllBookings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDeleteScheduleServlet</servlet-name>
        <servlet-class>com.railway.servlet.AdminDeleteScheduleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminDeleteScheduleServlet</servlet-name>
        <url-pattern>/deleteSchedule</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>AdminCancelBookingServlet</servlet-name>
    <servlet-class>com.railway.servlet.AdminCancelBookingServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>AdminCancelBookingServlet</servlet-name>
    <url-pattern>/adminCancelBooking</url-pattern>
</servlet-mapping>


</web-app>
